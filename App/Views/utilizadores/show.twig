{% extends "layouts/painel.twig" %}

{% block title %}Perfil do utilizador{% endblock %}

{% block content %}

<div class="page-header">
    <h1 class="page-title">Perfil do utilizador</h1>

    <div style="display: flex; gap: 10px;">

        {% if can('utilizadores.editar') %}
            <a href="{{ url('/utilizadores/editar/' ~ user.id) }}" class="btn-sm btn-warning">
                Editar
            </a>
        {% endif %}

        <a href="{{ url('/utilizadores') }}" class="btn-sm btn-secondary">
            Voltar
        </a>
    </div>
</div>

<div class="card" style="padding: 25px;">

    <h2 class="page-subtitle">{{ user.nome }}</h2>
    <p class="text-muted">ID #{{ user.id }}</p>

    <div class="info-grid">

        <div class="info-item">
            <h6 class="info-label">Email</h6>
            <p class="info-value">{{ user.email }}</p>
        </div>

        <div class="info-item">
            <h6 class="info-label">Nível</h6>
            <p class="info-value">
                <span class="badge badge-info">{{ user.nivelLabel() }}</span>
            </p>
        </div>

        <div class="info-item">
            <h6 class="info-label">Estado</h6>
            <p class="info-value">
                {% if user.isAtivo() %}
                    <span class="badge badge-success">Ativo</span>
                {% else %}
                    <span class="badge badge-danger">Inativo</span>
                {% endif %}
            </p>
        </div>

        <div class="info-item">
            <h6 class="info-label">Último login</h6>
            <p class="info-value">{{ user.ultimoLogin() ?? '—' }}</p>
        </div>

        {% if user.perfil_nome is defined %}
            <div class="info-item">
                <h6 class="info-label">Perfil ACL</h6>
                <p class="info-value">
                    <span class="badge badge-primary">{{ user.perfil_nome }}</span>
                </p>
            </div>
        {% endif %}

        {% if user.criado_em is defined %}
            <div class="info-item">
                <h6 class="info-label">Criado em</h6>
                <p class="info-value">{{ user.criado_em }}</p>
            </div>
        {% endif %}

        {% if user.atualizado_em is defined %}
            <div class="info-item">
                <h6 class="info-label">Atualizado em</h6>
                <p class="info-value">{{ user.atualizado_em ?? '—' }}</p>
            </div>
        {% endif %}

    </div>

</div>

{% endblock %}