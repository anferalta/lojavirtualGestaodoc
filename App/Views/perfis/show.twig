{# views/utilizadores/show.twig #}
{% extends "base.twig" %}

{% block title %}Perfil do utilizador{% endblock %}
{% block page_title %}Perfil do utilizador{% endblock %}

{% block content %}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
            <h2 class="h5 mb-0">{{ user.nome }}</h2>
            <small class="text-muted">ID #{{ user.id }}</small>
        </div>
        <div class="d-flex gap-2">
            <a href="{{ url('/utilizadores/editar/' ~ user.id) }}" class="btn btn-sm btn-warning">
                Editar
            </a>
            <a href="{{ url('/utilizadores') }}" class="btn btn-sm btn-outline-secondary">
                Voltar
            </a>
        </div>
    </div>

    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-6">
                <h6 class="text-uppercase text-muted small">Email</h6>
                <p class="mb-0">{{ user.email }}</p>
            </div>

            <div class="col-md-3">
                <h6 class="text-uppercase text-muted small">Nível</h6>
                <p class="mb-0">
                    <span class="badge bg-info text-dark">
                        {{ user.nivelLabel() }}
                    </span>
                </p>
            </div>

            <div class="col-md-3">
                <h6 class="text-uppercase text-muted small">Estado</h6>
                <p class="mb-0">
                    {% if user.isAtivo() %}
                        <span class="badge bg-success">Ativo</span>
                    {% else %}
                        <span class="badge bg-danger">Inativo</span>
                    {% endif %}
                </p>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <h6 class="text-uppercase text-muted small">Último login</h6>
                <p class="mb-0">
                    {{ user.ultimoLogin() ?? '—' }}
                </p>
            </div>
        </div>
    </div>
</div>

{% endblock %}