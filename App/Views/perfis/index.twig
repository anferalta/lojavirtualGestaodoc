{% extends "layouts/painel.twig" %}

{% block title %}Perfis{% endblock %}

{% block content %}

<h1 class="page-title">Perfis</h1>

<div class="actions-bar">
    <a href="{{ url('/admin/perfis/criar') }}" class="btn btn-primary">Novo Perfil</a>
</div>

<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Ações</th>
    </tr>
    </thead>
    <tbody>
    {% for perfil in perfis %}
        <tr>
            <td>{{ perfil.id }}</td>
            <td>{{ perfil.nome }}</td>
            <td>
                <a href="{{ url('/admin/perfis/editar/' ~ perfil.id) }}" class="btn btn-sm btn-secondary">Editar</a>
                <a href="{{ url('/admin/perfis/eliminar/' ~ perfil.id) }}" class="btn btn-sm btn-danger"
                   onclick="return confirm('Tem a certeza que quer eliminar este perfil?');">
                    Eliminar
                </a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="3">Nenhum perfil encontrado.</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}