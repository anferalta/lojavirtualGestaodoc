{% extends 'layouts/admin.twig' %}

{% block content %}
<h1>Gestão de Perfis</h1>

<a href="/perfis/criar" class="btn btn-primary mb-3">Criar Perfil</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Slug</th>
            <th>Descrição</th>
            <th>Criado em</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        {% for perfil in perfis %}
        <tr>
            <td>{{ perfil.id }}</td>
            <td>{{ perfil.nome }}</td>
            <td>{{ perfil.slug }}</td>
            <td>{{ perfil.descricao }}</td>
            <td>{{ perfil.created_at }}</td>
            <td>
                <a href="/perfis/editar/{{ perfil.id }}" class="btn btn-sm btn-warning">Editar</a>

                <form action="/perfis/delete/{{ perfil.id }}" method="POST" style="display:inline-block"
                      onsubmit="return confirm('Tem a certeza que deseja eliminar este perfil?')">
                    <button class="btn btn-sm btn-danger">Eliminar</button>
                </form>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}