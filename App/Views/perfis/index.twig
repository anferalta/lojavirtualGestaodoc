{% extends "layouts/painel.twig" %}

{% block title %}Perfis{% endblock %}

{% block content %}

<div class="page-header">
    <h1 class="page-title">Perfis</h1>

    {% if can('perfis.criar') %}
        <a href="{{ url('/perfis/criar') }}" class="btn-primary">
            Novo perfil
        </a>
    {% endif %}
</div>

<div class="table-wrapper">
    <table class="modern-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Estado</th>
                <th class="text-end">Ações</th>
            </tr>
        </thead>
        <tbody>
            {% if perfis is empty %}
                <tr>
                    <td colspan="5" style="text-align:center; padding:20px;">
                        Nenhum perfil encontrado.
                    </td>
                </tr>
            {% else %}
                {% for p in perfis %}
                    <tr>
                        <td>{{ p.id }}</td>
                        <td>{{ p.nome }}</td>
                        <td>{{ p.descricao ?? '—' }}</td>
                        <td>
                            {% if p.estado == 'ativo' %}
                                <span class="badge badge-success">Ativo</span>
                            {% else %}
                                <span class="badge badge-danger">Inativo</span>
                            {% endif %}
                        </td>
                        <td class="text-end" style="display:flex; gap:6px; justify-content:flex-end;">
                            {% if can('perfis.editar') %}
                                <a href="{{ url('/perfis/editar/' ~ p.id) }}" class="btn-sm btn-warning">
                                    Editar
                                </a>
                            {% endif %}

                            {% if can('perfis.eliminar') %}
                                <form method="post"
                                      action="{{ url('/perfis/eliminar/' ~ p.id) }}"
                                      onsubmit="return confirm('Tem a certeza que deseja eliminar este perfil?');">
                                    <input type="hidden" name="_csrf" value="{{ csrf }}">
                                    <button class="btn-sm btn-danger">Eliminar</button>
                                </form>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            {% endif %}
        </tbody>
    </table>
</div>

{% endblock %}