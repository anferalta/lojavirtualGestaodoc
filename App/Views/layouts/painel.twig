<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Painel{% endblock %}</title>

    <link rel="stylesheet" href="{{ asset('css/painel.css') }}">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body class="layout">

    <!-- SIDEBAR -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <span class="logo">ğŸ“ Gestao Documental</span>
        </div>

        <nav class="menu">

            {# DASHBOARD #}
            <a href="{{ url('/painel') }}"
               class="menu-item {{ app.request.uri starts with '/painel' ? 'active' }}">
                <span class="icon">ğŸ </span> Dashboard
            </a>

            {# UTILIZADORES #}
            {% if can('utilizadores.ver') %}
            <a href="{{ url('/utilizadores') }}"
               class="menu-item {{ app.request.uri starts with '/utilizadores' ? 'active' }}">
                <span class="icon">ğŸ‘¤</span> Utilizadores
            </a>
            {% endif %}

            {# DOCUMENTOS #}
            {% if can('documentos.ver') %}
            <a href="{{ url('/documentos') }}"
               class="menu-item {{ app.request.uri starts with '/documentos' ? 'active' }}">
                <span class="icon">ğŸ“„</span> Documentos
            </a>
            {% endif %}

            {# PERFIS #}
            {% if can('perfis.ver') %}
            <a href="{{ url('/perfis') }}"
               class="menu-item {{ app.request.uri starts with '/perfis' ? 'active' }}">
                <span class="icon">ğŸ”</span> Perfis
            </a>
            {% endif %}

            {# LOGS #}
            {% if can('logs.ver') %}
            <a href="{{ url('/logs') }}"
               class="menu-item {{ app.request.uri starts with '/logs' ? 'active' }}">
                <span class="icon">ğŸ“</span> Logs
            </a>
            {% endif %}

        </nav>
    </aside>

    <!-- MAIN AREA -->
    <div class="main">

        <!-- TOPBAR -->
        <header class="topbar">
            <div class="topbar-left">
                <button class="btn-toggle" onclick="document.body.classList.toggle('sidebar-collapsed')">
                    â˜°
                </button>
            </div>

            <div class="topbar-right">
                <span class="user">{{ usuario_nome }}</span>
                <a href="{{ url('/logout') }}" class="logout">Sair</a>
            </div>
        </header>

        <!-- CONTENT -->
        <main class="content-area">
            {% include 'partials/flash.twig' %}
            {% block content %}{% endblock %}
        </main>

    </div>

</body>
</html>