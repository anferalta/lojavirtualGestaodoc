{% extends "base.twig" %}

{% block title %}Editar Perfil{% endblock %}
{% block page_title %}Editar Perfil{% endblock %}

{% block content %}

<form method="post" action="/perfis/update/{{ perfil.id }}">
    <input type="hidden" name="_csrf" value="{{ csrf() }}">

    <div class="mb-3">
        <label class="form-label">Nome do Perfil</label>
        <input type="text" name="nome" class="form-control" value="{{ perfil.nome }}" required>
    </div>

    <button class="btn btn-primary">Guardar</button>
    <a href="/perfis" class="btn btn-secondary">Cancelar</a>
</form>

{% endblock %}