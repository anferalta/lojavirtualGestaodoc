{# views/base.twig #}
<!doctype html>
<html lang="pt">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <title>{% block title %}Painel{% endblock %}</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/painel.css') }}">

        {% block styles %}{% endblock %}
    </head>
    <body>

        <div class="d-flex" id="wrapper">

            {# SIDEBAR #}
            <nav id="sidebar" class="bg-dark text-white p-3" style="min-width: 230px;">
                <div class="mb-4">
                    <h2 class="h5 mb-0">Loja Virtual</h2>
                    <small class="text-muted">Painel de gestão</small>
                </div>

                <ul class="nav nav-pills flex-column mb-auto">
                    {# Dashboard #}
                    <li class="nav-item mb-1">
                        <a href="{{ url('/dashboard') }}" class="nav-link text-white">
                            <i class="fa fa-home me-2"></i> Dashboard
                        </a>
                    </li>

                    {# Menu dinâmico com ACL real #}
                    {% for item in menu_service.itens() %}
                        {% if item.perm is null or can(item.perm) %}
                            <li class="nav-item mb-1">
                                <a href="{{ item.url }}" class="nav-link text-white">
                                    {% if item.icon %}<i class="{{ item.icon }} me-2"></i>{% endif %}
                                    {{ item.label }}
                                </a>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>

                <hr class="text-secondary">

                <div class="small">
                    <div class="fw-semibold">
                        {{ usuario_nome ?? 'Utilizador' }}
                    </div>
                    <div class="text-muted">
                        Entrou em: {{ Sessao.get('ultimo_login') ?? '—' }}
                    </div>
                </div>
            </nav>

            {# CONTEÚDO PRINCIPAL #}
            <div id="page-content" class="flex-grow-1">

                {# TOPBAR #}
                <nav class="navbar navbar-expand navbar-light bg-light border-bottom px-3">
                    <span class="navbar-brand mb-0 h6">
                        {% block page_title %}{% endblock %}
                    </span>
                    <div class="ms-auto d-flex align-items-center gap-2">
                        <span class="text-muted small me-3">
                            {{ usuario_nome ?? 'Sem sessão' }}
                        </span>
                        <a href="{{ url('/logout') }}" class="btn btn-sm btn-outline-danger">
                            Sair
                        </a>
                    </div>
                </nav>

                <main class="container-fluid py-4">

                    {# FLASH MESSAGE GLOBAL (se usares função flash()) #}

                    {% if flash %}
                        <div class="alert alert-{{ flash.tipo }} alert-dismissible fade show" role="alert">
                            {{ flash.msg }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endif %}

                    {% block content %}{% endblock %}
                </main>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
        <script src="{{ asset('js/theme.js') }}"></script>
    </body>
</html>