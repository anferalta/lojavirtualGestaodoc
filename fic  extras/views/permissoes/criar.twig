{% extends "base.twig" %}

{% block title %}Criar Permissão{% endblock %}
{% block page_title %}Criar Permissão{% endblock %}

{% block content %}

<form method="post" action="/permissoes/store">
    <input type="hidden" name="_csrf" value="{{ csrf() }}">

    <div class="mb-3">
        <label class="form-label">Chave (ex: utilizadores.ver)</label>
        <input type="text" name="chave" class="form-control" required>
    </div>

    <div class="mb-3">
        <label class="form-label">Descrição</label>
        <input type="text" name="descricao" class="form-control" required>
    </div>

    <button class="btn btn-success">Criar</button>
    <a href="/permissoes" class="btn btn-secondary">Cancelar</a>
</form>

{% endblock %}
