{% extends "layout.twig" %}

{% block content %}
<div class="container mt-4">
    <div class="d-flex justify-content-between mb-3">
        <h1>Perfis</h1>

        {% if can('perfis.criar') %}
        <a href="{{ url('/perfis/criar') }}" class="btn btn-primary btn-sm">Novo Perfil</a>
        {% endif %}
    </div>

    {% if flash %}
        <div class="alert alert-{{ flash.tipo }}">{{ flash.mensagem }}</div>
    {% endif %}

    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>#</th>
                <th>Nome</th>
                <th>Estado</th>
                <th>Criado em</th>
                <th class="text-end">Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for p in perfis %}
            <tr>
                <td>{{ p.id }}</td>
                <td>{{ p.nome }}</td>
                <td>
                    {% if p.estado == 'ativo' %}
                        <span class="badge bg-success">Ativo</span>
                    {% else %}
                        <span class="badge bg-secondary">Inativo</span>
                    {% endif %}
                </td>
                <td>{{ p.criado_em|date('d/m/Y H:i') }}</td>
                <td class="text-end">
                    {% if can('perfis.editar') %}
                    <a href="{{ url('/perfis/editar/' ~ p.id) }}" class="btn btn-sm btn-outline-primary">Editar</a>
                    {% endif %}

                    {% if can('perfis.eliminar') %}
                    <a href="{{ url('/perfis/eliminar/' ~ p.id) }}"
                       class="btn btn-sm btn-outline-danger"
                       onclick="return confirm('Eliminar este perfil?');">
                       Eliminar
                    </a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr><td colspan="5">Nenhum perfil encontrado.</td></tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}