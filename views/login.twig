{% extends "layout-login.twig" %}

{% block title %}Entrar{% endblock %}

{% block content %}
<h2 class="login-title">Bem-vindo</h2>
<p class="login-subtitle">Aceda ao painel de gestão</p>

<form action="{{ url('/login') }}" method="post" class="login-form">

    <div class="form-group">
        <label>Email</label>
        <input type="email" name="email" required placeholder="exemplo@dominio.com">
    </div>

    <div class="form-group">
        <label>Senha</label>
        <input type="password" name="senha" required placeholder="••••••••">
    </div>

    <button class="btn-login">Entrar</button>

    <a href="{{ url('/recuperar') }}" class="forgot-link">Esqueci-me da senha</a>

</form>
{% endblock %}