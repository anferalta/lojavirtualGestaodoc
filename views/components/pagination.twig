{% if pagination.total_pages > 1 %}
    <nav class="pagination">
        {% if pagination.has_prev %}
            <a href="{{ url(base_url ~ '?page=' ~ pagination.prev_page) }}" class="page-link">« Anterior</a>
        {% endif %}

        <span class="page-info">
            Página {{ pagination.current }} de {{ pagination.total_pages }}
        </span>

        {% if pagination.has_next %}
            <a href="{{ url(base_url ~ '?page=' ~ pagination.next_page) }}" class="page-link">Próxima »</a>
        {% endif %}
    </nav>
{% endif %}
