{% extends "layout-login.twig" %}

{% block title %}Recuperar Senha{% endblock %}

{% block content %}
<h2 class="login-title">Recuperar Senha</h2>
<p class="login-subtitle">Introduza o seu email para receber o link de recuperação.</p>

<form action="{{ url('/recuperar') }}" method="post" class="login-form">
    <div class="form-group">
        <label>Email</label>
        <input type="email" name="email" required placeholder="exemplo@dominio.com">
    </div>

    <button class="btn-login">Enviar link</button>

    <a href="{{ url('/login') }}" class="forgot-link">Voltar ao login</a>
</form>
{% endblock %}