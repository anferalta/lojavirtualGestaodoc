<form method="post" action="{{ acao == 'criar' ? url('/utilizadores/store') : url('/utilizadores/update/' ~ user.id) }}">

    <input type="hidden" name="_csrf" value="{{ csrf }}">

    <div class="form-group">
        <label>Nome</label>
        <input type="text" name="nome" class="form-control"
               value="{{ form_old.nome ?? user.nome ?? '' }}">
        {% if form_errors.nome %}
            <small class="text-danger">{{ form_errors.nome }}</small>
        {% endif %}
    </div>

    <div class="form-group mt-2">
        <label>Email</label>
        <input type="email" name="email" class="form-control"
               value="{{ form_old.email ?? user.email ?? '' }}">
        {% if form_errors.email %}
            <small class="text-danger">{{ form_errors.email }}</small>
        {% endif %}
    </div>

    <div class="form-group mt-2">
        <label>NÃ­vel</label>
        <select name="level" class="form-control">
            <option value="1" {{ (user.level ?? 1) == 1 ? 'selected' : '' }}>Normal</option>
            <option value="2" {{ (user.level ?? 1) == 2 ? 'selected' : '' }}>Administrador</option>
        </select>
    </div>

    <div class="form-group mt-2">
        <label>Senha</label>
        <input type="password" name="senha" class="form-control">
        {% if acao == 'editar' %}
            <small class="text-muted">Deixe em branco para manter a senha atual.</small>
        {% endif %}
        {% if form_errors.senha %}
            <small class="text-danger">{{ form_errors.senha }}</small>
        {% endif %}
    </div>

    <button class="btn btn-success mt-3">
        {{ acao == 'criar' ? 'Criar' : 'Atualizar' }}
    </button>

    <a href="{{ url('/utilizadores') }}" class="btn btn-secondary mt-3">Cancelar</a>
</form>