{% extends "base.twig" %}

{% block title %}Permissões de {{ user.nome }}{% endblock %}

{% block content %}
<h1 class="mb-4">Permissões de {{ user.nome }}</h1>

<form method="post">
    <div class="list-group">
        {% for perm in permissoes %}
            <label class="list-group-item">
                <input type="checkbox" name="permissoes[]" value="{{ perm.id }}"
                       {% if perm.id in permissoesUser %}checked{% endif %}>
                {{ perm.codigo }}
            </label>
        {% endfor %}
    </div>

    <button class="btn btn-primary mt-3">Guardar Permissões</button>
    <a href="/admin/utilizadores" class="btn btn-secondary mt-3">Voltar</a>
</form>
{% endblock %}
