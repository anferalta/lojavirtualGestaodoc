{% extends "layout.twig" %}

{% block title %}Editar Documento{% endblock %}

{% block content %}
<h1>Editar Documento</h1>

<form action="{{ url('/documentos/update/' ~ doc.id) }}" method="post">

    <input type="hidden" name="csrf" value="{{ csrf }}">

    <label>Título</label>
    <input type="text" name="titulo" value="{{ doc.titulo }}" required>

    <label>Descrição</label>
    <textarea name="descricao">{{ doc.descricao }}</textarea>

    <label>Estado</label>
    <select name="estado">
        <option value="ativo"   {{ doc.estado == 'ativo' ? 'selected' }}>Ativo</option>
        <option value="inativo" {{ doc.estado == 'inativo' ? 'selected' }}>Inativo</option>
    </select>

    {% if errors %}
        <ul class="errors">
            {% for e in errors %}
                <li>{{ e }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <button class="btn-primary">Atualizar</button>
</form>
{% endblock %}