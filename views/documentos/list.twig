{% extends "layout.twig" %}

{% block content %}
<div class="card">
    <h2>Documentos</h2>

    <a href="{{ url('/documentos/upload') }}" class="btn btn-primary">+ Carregar Documento</a>

    <table class="table mt-3">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome Original</th>
                <th>Tamanho</th>
                <th>Tipo</th>
                <th>Download</th>
            </tr>
        </thead>

        <tbody>
            {% for d in documentos %}
                <tr>
                    <td>{{ d.id }}</td>
                    <td>{{ d.nome_original }}</td>
                    <td>{{ (d.tamanho / 1024)|number_format(2) }} KB</td>
                    <td>{{ d.tipo }}</td>
                    <td>
                        <a href="/uploads/documentos/{{ d.nome_ficheiro }}" class="btn btn-sm btn-success" download>
                            Download
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Nenhum documento encontrado.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
