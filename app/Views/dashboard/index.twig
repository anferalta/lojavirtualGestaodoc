{% extends "layouts/painel.twig" %}

{% block title %}Dashboard{% endblock %}

{% block content %}

<div class="page-header">
    <h1 class="page-title">Dashboard</h1>
    <p class="text-muted">Bem-vindo, {{ user.nome }}.</p>
</div>

<div class="dashboard-grid">
    <div class="card stat-card">
        <h3>Utilizadores</h3>
        <p class="stat-number">{{ stats.utilizadores }}</p>
        <p class="stat-label">Total de utilizadores</p>
    </div>

    <div class="card stat-card">
        <h3>Utilizadores ativos</h3>
        <p class="stat-number">{{ stats.ativos }}</p>
        <p class="stat-label">Com acesso ao sistema</p>
    </div>

    <div class="card stat-card">
        <h3>Documentos</h3>
        <p class="stat-number">{{ stats.documentos }}</p>
        <p class="stat-label">Total de documentos</p>
    </div>
</div>

{% endblock %}
