        <nav class="menu">
            <a href="{{ url('/painel') }}"
               class="menu-item {{ app_route starts with 'painel' ? 'active' }}">
                <span class="icon">ğŸ </span> Dashboard
            </a>

            {# Exemplo com ACL #}
            {% if acl.can('documentos.ver') %}
