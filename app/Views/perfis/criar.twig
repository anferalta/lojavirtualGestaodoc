{% extends "layouts/admin.twig" %}

{% block title %}Criar Perfil{% endblock %}

{% block content %}
<div class="container mt-4">

    <h1 class="h3 mb-4">Criar Perfil</h1>

    <form method="post" action="{{ url('admin/perfis/criar') }}">

        <div class="mb-3">
            <label class="form-label">Nome</label>
            <input type="text" name="nome" class="form-control" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Slug</label>
            <input type="text" name="slug" class="form-control" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Descrição</label>
            <textarea name="descricao" class="form-control"></textarea>
        </div>

        <button class="btn btn-primary">Criar Perfil</button>
        <a href="{{ url('admin/perfis') }}" class="btn btn-secondary">Cancelar</a>

    </form>

</div>
{% endblock %}