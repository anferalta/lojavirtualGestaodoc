{% extends 'layouts/admin.twig' %}

{% block title %}Dashboard{% endblock %}

{% block content %}
<div class="container mt-4">

    <h1 class="mb-4">Dashboard</h1>

    <div class="row">

        <div class="col-md-4">
            <div class="card text-bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total de Utilizadores</h5>
                    <p class="display-5">{{ total }}</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-bg-success mb-3">
                <div class="card-body">
                    <h5 class="card-title">Ativos</h5>
                    <p class="display-5">{{ ativos }}</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-bg-secondary mb-3">
                <div class="card-body">
                    <h5 class="card-title">Inativos</h5>
                    <p class="display-5">{{ inativos }}</p>
                </div>
            </div>
        </div>

    </div>

</div>
{% endblock %}
