{% extends 'layouts/admin.twig' %}

{% block title %}Perfis{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0">Perfis</h1>
        {% if acl.can('admin.perfis.criar') %}
            <a href="{{ url('admin/perfis/criar') }}" class="btn btn-primary">Novo Perfil</a>
        {% endif %}
    </div>

    {% if flash.sucesso %}
        <div class="alert alert-success">{{ flash.sucesso }}</div>
    {% endif %}
    {% if flash.erro %}
        <div class="alert alert-danger">{{ flash.erro }}</div>
    {% endif %}

    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>#</th>
                <th>Nome</th>
                <th>Slug</th>
                <th>Descrição</th>
                <th class="text-end">Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for perfil in perfis %}
            <tr>
                <td>{{ perfil.id }}</td>
                <td>{{ perfil.nome }}</td>
                <td><code>{{ perfil.slug }}</code></td>
                <td>{{ perfil.descricao ?: '-' }}</td>
                <td class="text-end">
                    {% if acl.can('admin.perfis.editar') %}
                        <a href="{{ url('admin/perfis/editar/' ~ perfil.id) }}" class="btn btn-sm btn-outline-primary">
                            Editar
                        </a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center text-muted">Nenhum perfil encontrado.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
