{% extends 'layouts/admin.twig' %}

{% block content %}
<h1>Gestão de Permissões</h1>

<a href="/admin/permissoes/criar" class="btn btn-primary mb-3">Criar Permissão</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Chave</th>
            <th>Descrição</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        {% for p in permissoes %}
        <tr>
            <td>{{ p.id }}</td>
            <td>{{ p.chave }}</td>
            <td>{{ p.descricao }}</td>
            <td>
                <a href="/admin/permissoes/editar/{{ p.id }}" class="btn btn-sm btn-warning">Editar</a>
                
                <form action="/admin/permissoes/delete/{{ p.id }}" method="POST" style="display:inline-block"
                      onsubmit="return confirm('Eliminar permissão?')">
                    <button class="btn btn-sm btn-danger">Eliminar</button>
                </form>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}